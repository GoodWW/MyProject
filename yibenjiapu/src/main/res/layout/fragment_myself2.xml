<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@mipmap/homepage_top_bg"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/fg_main_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_my"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:background="@mipmap/myself_top_bg">

        <com.xunman.yibenjiapu.utils.CircleImageView
            android:id="@+id/myself_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:src="@mipmap/logo" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myself_icon">
            <TextView
                android:id="@+id/myself_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请登陆"
                android:layout_centerInParent="true"
                android:textColor="@color/textview"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/iv_icon_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/not_vip"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/myself_username" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:background="@mipmap/myself_bg"
        android:orientation="vertical">

      <!--  <TextView
            android:id="@+id/myself_build"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/buildjiapu" />-->

   <!--     <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C9CFCD" />-->

        <TextView
            android:id="@+id/myself_my_prize"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/my_prize" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C9CFCD" />
        <TextView
            android:id="@+id/myself_my_vip"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/my_vip"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C9CFCD" />

        <TextView
            android:id="@+id/myself_my_integral"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/my_integral" />

  <!--      <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C9CFCD" />
        <TextView
            android:id="@+id/myself_service"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@mipmap/service" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C9CFCD" />

        <TextView
            android:id="@+id/myself_station_letter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/station_letter" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C9CFCD" />

        <TextView
            android:id="@+id/myself_setting"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/my_setting" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C9CFCD" />
    </LinearLayout>
</LinearLayout>
