<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/bg_title">

        <TextView
            style="@style/TextTheme_tipstheme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/title_change_pwd" />

        <TextView
            android:id="@+id/ch_login_back"
            android:layout_width="@dimen/back_width"
            android:layout_height="@dimen/back_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/back_marginLeft"
            android:background="@drawable/selector_back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/change_pwd_marginTop"
        android:layout_weight="4"
        android:orientation="vertical"
        android:padding="@dimen/change_pwd_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <com.xunman.yibenjiapu.customview.DeletableEditText
                android:id="@+id/ch_login_old_psw"
                android:layout_width="@dimen/change_pwd_et_width"
                android:layout_height="@dimen/change_pwd_et_height"
                android:layout_weight="1"
                android:background="@drawable/selector_edittext_account"
                android:hint="请输入原密码"
                android:lines="1"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/change_pwd_et_paddingLeft" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <com.xunman.yibenjiapu.customview.DeletableEditText
                android:id="@+id/ch_login_new_psd"
                android:layout_width="@dimen/change_pwd_et_width"
                android:layout_height="@dimen/change_pwd_et_height"
                android:layout_weight="1"
                android:background="@drawable/selector_edittext_account"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingLeft="@dimen/change_pwd_et_paddingLeft" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <com.xunman.yibenjiapu.customview.DeletableEditText
                android:id="@+id/ch_login_new_psd_again"
                android:layout_width="@dimen/change_pwd_et_width"
                android:layout_height="@dimen/change_pwd_et_height"
                android:layout_weight="1"
                android:background="@drawable/selector_edittext_account"
                android:hint="请确认密码"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingLeft="@dimen/change_pwd_et_paddingLeft" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:padding="@dimen/change_pwd_submit_ll_padding">

        <Button
            android:id="@+id/ch_login_send"
            android:layout_width="@dimen/btn_add_user_info_submit_width"
            android:layout_height="@dimen/btn_add_user_info_submit_height"
            android:layout_gravity="bottom"
            android:background="@drawable/selector_login_button"
            android:text="@string/change_pwd_submit_sure"
            android:layout_marginBottom="20dp"
            android:textColor="@color/change_pwd_btn_text"
            android:textSize="@dimen/change_pwd_verification_code_btn_text"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
