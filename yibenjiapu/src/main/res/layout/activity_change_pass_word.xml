<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/bg_title">
        <TextView
            style="@style/TextTheme_tipstheme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/title_change_pwd" />
        <TextView
            android:id="@+id/forget_pass_word_back"
            android:layout_width="@dimen/back_width"
            android:layout_height="@dimen/back_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/back_marginLeft"
            android:background="@drawable/selector_back" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_e"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/change_pwd_marginTop"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="@dimen/change_pwd_padding" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                <com.xunman.yibenjiapu.customview.DeletableEditText
                    android:id="@+id/change_pass_word_number"
                    android:layout_width="@dimen/change_pwd_et_width"
                    android:layout_height="@dimen/change_pwd_et_height"
                    android:layout_weight="1"
                    android:lines="1"
                    android:background="@drawable/selector_edittext_account"
                    android:hint="@string/change_pwd_phone_or_email_hint"
                    android:paddingLeft="@dimen/change_pwd_et_paddingLeft" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >
                <com.xunman.yibenjiapu.customview.DeletableEditText
                    android:id="@+id/change_pass_word_code"
                    android:layout_width="@dimen/change_pwd_et_width"
                    android:layout_height="@dimen/change_pwd_et_height"
                    android:maxLength="6"
                    android:layout_weight="1"
                    android:lines="1"
                    android:background="@drawable/selector_edittext_account"
                    android:hint="@string/change_pwd_verification_code_hint"
                    android:paddingLeft="@dimen/change_pwd_et_paddingLeft" />
                <Button
                    android:id="@+id/change_pass_word_get_code_bt"
                    android:layout_width="@dimen/change_pwd_verification_code_btn_width"
                    android:layout_height="@dimen/change_pwd_verification_code_btn_heigh"
                    android:layout_marginLeft="@dimen/change_pwd_verification_code_btn_marginLeft"
                    android:background="@drawable/selector_get_code"
                    android:text="@string/change_pwd_verification_code_btn_text"
                    android:textColor="@color/change_pwd_btn_text"
                    android:textSize="@dimen/change_pwd_verification_code_btn_text"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                <com.xunman.yibenjiapu.customview.DeletableEditText
                    android:id="@+id/change_pass_word_again_pass_word"
                    android:layout_width="@dimen/change_pwd_et_width"
                    android:layout_height="@dimen/change_pwd_et_height"
                    android:layout_weight="1"
                    android:lines="1"
                    android:background="@drawable/selector_edittext_account"
                    android:hint="@string/change_pwd_new_hint"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/change_pwd_et_paddingLeft" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <com.xunman.yibenjiapu.customview.DeletableEditText
                    android:id="@+id/change_pass_word_again_new_pass_word"
                    android:layout_width="@dimen/change_pwd_et_width"
                    android:layout_height="@dimen/change_pwd_et_height"
                    android:layout_weight="1"
                    android:lines="1"
                    android:background="@drawable/selector_edittext_account"
                    android:hint="@string/change_pwd_new_again_hint"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/change_pwd_et_paddingLeft" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="@dimen/change_pwd_submit_ll_padding" >
            <Button
                android:id="@+id/change_pass_word_send_change"
                android:layout_width="@dimen/btn_add_user_info_submit_width"
                android:layout_height="@dimen/btn_add_user_info_submit_height"
                android:layout_alignParentBottom="true"
                android:background="@drawable/selector_login_button"
                android:text="@string/change_pwd_submit_sure"
                android:textColor="@color/change_pwd_btn_text"
                android:textSize="@dimen/change_pwd_verification_code_btn_text"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
