<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@mipmap/homepage_top_bg"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/fg_main_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_service"
            android:textSize="18sp" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textColor="#898989" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transcriptMode="alwaysScroll"
        android:layout_weight="1"
        android:divider="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#fff"
        android:orientation="horizontal">

        <Button
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/btn_left"
            android:layout_margin="5dp"
            android:text="@string/service_left"
            android:textColor="#fff"
            android:background="@drawable/button_bg"
            />

        <com.xunman.yibenjiapu.customview.DeletableEditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:id="@+id/et_msg"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_edittext_account"
            android:drawableRight="@drawable/user_delete"
            android:paddingLeft="10dp"
            android:paddingRight="2dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/btn_right"
            android:layout_margin="5dp"
            android:text="@string/service_right"
            android:textColor="#fff"
            android:background="@drawable/button_bg"
            />
    </LinearLayout>
</LinearLayout>
